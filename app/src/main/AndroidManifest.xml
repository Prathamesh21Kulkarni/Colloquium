<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.colloquium">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/colloquium_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/colloquium_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".messages"></activity>
        <activity android:name=".MyRecyclerViewActivity" />
        <activity android:name=".subject" />
        <activity android:name=".create_group" />
        <activity android:name=".HomeFragment" />
        <activity android:name=".userprofile" />
        <activity android:name=".forgotpassword" />
        <activity android:name=".splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".homescreen" />
        <activity android:name=".Signup" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>