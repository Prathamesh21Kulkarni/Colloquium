<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/union"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@+id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@drawable/signup" />

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/card_"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:id="@+id/ivName"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/name" />

        <EditText
            android:id="@+id/etname"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivName"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/name1"
            android:fontFamily="@font/lora"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEmail"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/email" />

        <EditText
            android:id="@+id/etemail"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivEmail"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/mailid"
            android:fontFamily="@font/lora"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivPass"
            android:layout_width="155dp"
            android:layout_height="20dp"
            android:layout_below="@+id/etemail"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tpassword" />

        <EditText
            android:id="@+id/etpass"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivPass"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/pass"
            android:fontFamily="@font/lora"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivcpass"
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/confirm_password" />

        <EditText
            android:id="@+id/etcpass"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivcpass"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/mailid"
            android:fontFamily="@font/lora"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/btnlogin"
            android:fontFamily="@font/lora"
            android:text="SignUp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>